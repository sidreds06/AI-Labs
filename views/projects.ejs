      <div class="card-fluid rounded-0 mx-auto bg-dark" style="width:100%">
          <img class="card-img" src="../../IMG/one.jpg" alt="AI" width="100%" >
          <div class="card-img-overlay">
            <h1 class="card-title display-4 font-weight-bold text-white txt1">AI Lab Projects</h1>
            <p class="card-text text-white txt2"> Explore the world of Artificial Intelligence...</p>
          </div>
      </div>
      <div class="jumbotron bg-white text-center m-5">
        <h1>Explore Projects</h1>
      </div>
      <div class="card-deck m-5 mx-auto" style="width:90%">
        <%for(var i=0,j=0; i<data.length && j<4; ++i) { %>
          <% if(data[i].status) { %>
            <%j++%>
        <div class="card" >
          <img class="card-img-top" src=<%= `${data[i].img}` %> alt="Card image cap" height="250">
          <div class="card-body">
            <h5 class="card-title"><%=data[i].title%></h5>
            <p class="card-text"><%=data[i].description%></p>
          </div>
          <div class="card-footer bg-white p-0 pl-2">
            <p class="card-text m-0"><small><%=data[i].username%></small></p>
            <p class="card-text m-0"><small class="text-muted"><%=data[i].college%></small></p>
            <a href="/view/<%= data[i].id %>" class="card-text m-0 p-0 "><p class="text-right m-0 p-0 pr-1"><small>View more</small></p></a>
        </div>
        </div>
        <% } %>
        <% } %>
        </div>
