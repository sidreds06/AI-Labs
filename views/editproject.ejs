    <div class="container">
        <form action="/update/<%= data[0].id %>" method='POST' enctype="multipart/form-data">
            <div class="form-group">
                <label>Title:</label>
                <input type="text" name="title" class="form-control" value="<%= data[0].title %>" required>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea name="description" id="description" class="form-control" required><%= data[0].description %></textarea>
            </div>
            <div class="form-group">
                <label>Body:</label>
                <textarea name="body" id="body" required><%= data[0].body %></textarea>
            </div>
            <div class="form-group">
                <label>Image:</label>
                <input type="file" name="image" class="text-input" required>
            </div>
            <center>
                <button type="submit" class="btn btn-primary my-5">Add Post</button>
            </center>
        </form>
